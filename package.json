{
  "name": "sloth-app",
  "productName": "Sloth",
  "version": "0.2.0-0",
  "description": "Desktop app for Sloth",
  "main": "init.js",
  "author": {
    "name": "Unai Esteibar",
    "email": "uesteibar@gmail.com"
  },
  "contributors": [
    "Marcio Barrios <marciobarrios@gmail.com>"
  ],
  "repository": "https://github.com/uesteibar/sloth-app",
  "license": "MIT",
  "dependencies": {
    "babel-runtime": "^6.22.0",
    "child_process": "^1.0.2",
    "classnames": "^2.2.5",
    "eslint": "^3.19.0",
    "fs-extra": "^2.1.2",
    "js-yaml": "^3.8.3",
    "jss": "^6.5.0",
    "lint-staged": "^3.4.0",
    "open": "0.0.5",
    "pre-commit": "^1.2.2",
    "prettier": "^0.22.0",
    "react": "^15.4.2",
    "react-bootstrap": "^0.30.8",
    "react-dom": "^15.4.2",
    "react-jss": "^5.4.1",
    "react-redux": "^5.0.3",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "standard-version": "^4.0.0",
    "user-home": "^2.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.2.1",
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-0": "^6.1.18",
    "browser-sync": "^2.9.3",
    "chai": "^3.4.1",
    "electron": "^1.5.0",
    "electron-builder": "^13.8.2",
    "electron-devtools-installer": "^2.1.0",
    "electron-packager": "^8.6.0",
    "eslint": "^3.14.1",
    "eslint-plugin-react": "^6.9.0",
    "mocha": "^3.2.0",
    "npm-run-all": "^4.0.1",
    "rimraf": "^2.5.4"
  },
  "scripts": {
    "bump": "standard-version",
    "prettier": "prettier --single-quote --write --jsx-bracket-same-line app/index.js 'app/**/*.js'",
    "lint": "eslint --no-ignore scripts app test *.js",
    "lint:staged": "lint-staged",
    "postinstall": "install-app-deps",
    "start": "npm run private:compile -- --source-maps true && run-p -r private:watch private:serve",
    "pack": "run-s private:clean private:compile private:build:mac",
    "private:build:mac": "build --mac",
    "private:watch": "npm run private:compile -- --source-maps true --watch --skip-initial-build",
    "private:serve": "babel-node scripts/serve.js",
    "private:compile": "babel app/ --copy-files --out-dir build",
    "private:clean": "rimraf build"
  },
  "lint-staged": {
    "app/**/*.js": [
      "prettier --single-quote --write",
      "eslint --fix",
      "git add"
    ]
  },
  "pre-commit": "lint:staged",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
